<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pavadinimas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/imageProjektas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eilė:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnMinusEile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textEile"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="0"
            android:textSize="32sp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/btnPlusEile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/textPastaba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pastaba"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGrizti"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Grįžti"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/black"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnRedaguoti"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Redaguoti"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>