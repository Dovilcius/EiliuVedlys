<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="vertical"
    android:scrollbarSize="12dp"
    android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
    android:fadeScrollbars="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <!-- Projektų vieta -->
        <GridLayout
            android:id="@+id/cardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_marginTop="3dp" />

        <!-- Jei projektų nėra -->
        <TextView
            android:id="@+id/textNeraProjektu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projektų dar nėra. Pridėkite pirmą projektą."
            android:textSize="16sp"
            android:textColor="#666666"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:id="@+id/btnPridetiProjekta"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_calculate"
            android:src="@drawable/prideti_foreground"
            android:contentDescription="Pridėti projektą" />

    </LinearLayout>
</ScrollView>