<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="vertical"
    android:scrollbarSize="12dp"
    android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
    android:fadeScrollbars="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/inputPavadinimas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Projekto pavadinimas"
            android:inputType="textCapWords"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/imageProjektoFoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnMinusEile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textEiliuInfo"
                android:layout_width="120dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:text="0"
                android:textSize="32sp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginHorizontal="8dp" />

            <Button
                android:id="@+id/btnPlusEile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <EditText
            android:id="@+id/editPastaba"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:hint="Pastabos"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnGrizti"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Grįžti"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnIssaugoti"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Išsaugoti"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Priminimo nustatymas -->
        <TextView
            android:id="@+id/labelApimtis"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Priminimai"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/inputPriminimoEile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Priminimo eilė (pvz.: 40)"
            android:inputType="number"
            android:background="@android:color/white"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/inputPriminimoTekstas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Priminimo tekstas (pvz.: pakeisti siūlą)"
            android:inputType="text"
            android:background="@android:color/white"
            android:layout_marginTop="8dp" />
        <Button
            android:id="@+id/btnPridetiPriminima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pridėti priminimą"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/listPriminimai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>
</ScrollView>
